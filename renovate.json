{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":preserveSemverRanges", "group:allNonMajor"],
  "baseBranches": ["dev"],
  "ignorePaths": ["packages/archive/**"],
  "packageRules": [
    {
      "matchPackageNames": ["tailwindcss"],
      "matchFileNames": ["packages/tailwind3-plugin/**"],
      "enabled": false
    },
    {
      "matchPackageNames": ["@manypkg/get-packages"],
      "enabled": false
    },
    {
      "matchPackageNames": ["@grape_design_react/react-icon"],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "@karrotmarket/react-monochrome-icon",
        "@karrotmarket/react-multicolor-icon",
        "@karrotmarket/icon-data"
      ],
      "groupName": "karrot-icon-updates",
      "allowedVersions": "*"
    },
    {
      "matchPackageNames": ["bun"],
      "groupName": "bun"
    }
  ]
}
