{
  "name": "@grape_design_react/project",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/react-headless/*",
    "packages/utils/*",
    "tools/*",
    "ecosystem/*",
    "ecosystem/rootage/*",
    "ecosystem/qvism/*",
    "examples/*",
    "docs"
  ],
  "scripts": {
    "build": "ultra -r build",
    "packages:build": "ultra -r --build --filter 'packages/*' build",
    "ecosystem:build": "ultra -r --build --filter 'ecosystem/*' build",
    "lint:publish": "bun --filter '*' lint:publish",
    "lint:knip": "knip",
    "release": "bun packages:build && bun changeset publish",
    "version": "bun generate:changelog && changeset version && bun install --no-immutable",
    "format:all": "bun biome format --fix",
    "test:all": "bun test",
    "generate:all": "bun rootage:generate && bun qvism:generate && bun docs:generate",
    "figma:sync": "bun figma-extractor --config=scripts/.config/figma-extractor.config.ts scripts/data variables && bun run ./scripts/figma-to-rootage.ts",
    "images:convert": "bun scripts/convert-images-to-webp.ts",
    "images:preview": "bun scripts/convert-images-to-webp.ts --dry-run",
    "docs:generate": "bun --filter @grape_design_react/docs generate:all",
    "docs:dev": "bun --filter @grape_design_react/docs dev",
    "docs:build": "bun --filter @grape_design_react/docs build",
    "storybook": "bun --filter @grape_design_react/docs storybook",
    "storybook:build": "bun --filter @grape_design_react/docs build-storybook",
    "rootage:build": "ultra -r --build rootage:build",
    "rootage:generate": "ultra -r --rebuild rootage:generate",
    "rootage:generate:watch": "watchlist packages/rootage/artifacts -- bun rootage:generate",
    "rootage:test": "bun test ecosystem/rootage",
    "rootage:test:watch": "bun test --watch ecosystem/rootage",
    "qvism:build": "ultra -r --build qvism:build",
    "qvism:generate": "bun --filter @grape_design_react/qvism-preset build && bun --filter @grape_design_react/css qvism:generate",
    "qvism:generate:watch": "watchlist packages/qvism-preset -- bun qvism:generate",
    "cli:watch": "watchlist packages/cli -- bun --filter @grape_design_react/cli dev",
    "headless:build": "ultra -r --filter 'packages/react-headless/*' build",
    "headless:test": "bun test packages/react-headless",
    "headless:test:watch": "bun test --watch packages/react-headless",
    "react:test": "bun test packages/react",
    "react:test:watch": "bun test --watch packages/react",
    "clean:lib": "bun --filter '*' clean",
    "clean:modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "generate:codemod-docs": "bun scripts/generate-codemod-docs.ts",
    "generate:changelog": "bun scripts/generate-changelog.ts",
    "mcp:start": "bunx --bun @grape_design_react/mcp@latest socket"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@changesets/assemble-release-plan": "^6.0.9",
    "@changesets/cli": "^2.29.2",
    "@changesets/config": "^3.1.1",
    "@changesets/get-dependents-graph": "^2.1.3",
    "@changesets/get-github-info": "^0.7.0",
    "@changesets/pre": "^2.0.2",
    "@changesets/read": "^0.6.5",
    "@changesets/types": "^6.1.0",
    "@figma/rest-api-spec": "^0.36.0",
    "@happy-dom/global-registrator": "^20.4.0",
    "@manypkg/get-packages": "~1.1.3",
    "@grape_design_react/figma-extractor": "workspace:*",
    "@grape_design_react/qvism-cli": "workspace:*",
    "@grape_design_react/rootage-cli": "workspace:*",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "^1.3.8",
    "@types/semver": "^7.7.0",
    "bunchee": "^6.5.1",
    "figma-api": "^2.1.0-beta",
    "knip": "^5.50.5",
    "publint": "^0.3.12",
    "semver": "^7.7.2",
    "typescript": "^5.9.2",
    "ultra-runner": "^3.10.5",
    "watchlist": "^0.3.1",
    "wrangler": "^4.13.0",
    "yaml": "^2.8.2"
  },
  "patchedDependencies": {
    "@radix-ui/react-dialog@1.1.15": "patches/@radix-ui%2Freact-dialog@1.1.15.patch"
  }
}