{
  "name": "figma-v3-migration",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "bun run build:ui && bun run build:main",
    "build:ui": "vite build --config vite.ui.config.ts",
    "build:main": "vite build --config vite.main.config.ts",
    "watch": "concurrently \"bun run watch:ui\" \"bun run watch:main\"",
    "watch:ui": "vite build --watch --config vite.ui.config.ts",
    "watch:main": "vite build --watch --config vite.main.config.ts",
    "dev": "concurrently \"bun run watch:ui\" \"bun run watch:main\"",
    "lint": "biome check .",
    "preview": "vite preview",
    "extract": "bun figma-extractor src/main/data/__generated__/v3-component-sets component-sets",
    "typecheck": "bun run typecheck:main && bun run typecheck:ui",
    "typecheck:main": "tsc --noEmit -p tsconfig.main.json",
    "typecheck:ui": "tsc --noEmit -p tsconfig.ui.json"
  },
  "dependencies": {
    "@create-figma-plugin/utilities": "^4.0.0",
    "@figmazing/event": "0.0.1",
    "@karrotmarket/react-monochrome-icon": "^1.8.0",
    "@grape_design_react/css": "^1.2.3",
    "@grape_design_react/migration-index": "^1.0.0",
    "@grape_design_react/react": "^1.2.5",
    "@grape_design_react/vite-plugin": "^1.1.0",
    "change-case": "^5.4.4",
    "color-delta-e": "^1.3.0",
    "normalize.css": "^8.0.1",
    "posthog-js": "^1.245.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rgb-hex": "^4.1.0"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.110.0",
    "@grape_design_react/figma-extractor": "^1.1.0",
    "@types/node": "^25.0.0",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.1.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.31.0",
    "vite": "^7.0.0",
    "vite-plugin-singlefile": "^2.2.0",
    "vite-tsconfig-paths": "^6.0.0"
  }
}
