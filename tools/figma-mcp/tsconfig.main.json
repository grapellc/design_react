{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["ES2020"],
    "module": "ESNext",
    "target": "ES2017",
    "moduleResolution": "Bundler",
    "strict": true,
    "types": ["@figma/plugin-typings"],
    "noEmit": false,
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/main"]
}
