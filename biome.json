{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "assist": { "actions": { "source": { "organizeImports": "off" } } },
  "formatter": {
    "includes": [
      "**",
      "!**/package.json",
      "!**/archive/**/*",
      "!**/.next/**/*",
      "!**/.storybook/**/*",
      "!**/.sanity/**/*",
      "!**/__testfixtures__/**/*",
      "!**/__generated__/**/*",
      "!**/__registry__/**/*",
      "!**/public/**/*",
      "!packages/css/**/*",
      "!**/schema.json",
      "!packages/qvism-preset/src/vars/**/*",
      "!packages/qvism-preset/src/token.css",
      "!packages/qvism-preset/src/tokens.ts",
      "!packages/tailwind3-plugin/src/index.ts",
      "!packages/tailwind4-theme/src/index.css"
    ],
    "enabled": true,
    "indentStyle": "space",
    "lineEnding": "lf",
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "includes": [
      "**",
      "!**/public",
      "!**/node_modules",
      "!**/.cache",
      "!**/lib",
      "!**/dist",
      "!**/archive/**/*",
      "!**/tools/**/build/**/*",
      "!**/.next",
      "!**/.source",
      "!**/.vscode",
      "!**/out",
      "!**/bin",
      "!**/__testfixtures__/**/*"
    ],
    "rules": {
      "recommended": true,
      "style": {
        "useNodejsImportProtocol": "off",
        "noNonNullAssertion": "warn",
        "noUnusedTemplateLiteral": "warn",
        "useTemplate": "warn",
        "noParameterAssign": "error",
        "useAsConstAssertion": "error",
        "useDefaultParameterLast": "error",
        "useEnumInitializers": "error",
        "useSelfClosingElements": "error",
        "useSingleVarDeclarator": "error",
        "useNumberNamespace": "error",
        "noInferrableTypes": "error",
        "noUselessElse": "error"
      },
      "complexity": {
        "useLiteralKeys": "off",
        "noBannedTypes": "off",
        "noForEach": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "warn",
        "noUnusedVariables": "error"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn"
      },
      "suspicious": {
        "noExplicitAny": "info",
        "noArrayIndexKey": "info"
      },
      "a11y": {
        "useKeyWithClickEvents": "off",
        "noLabelWithoutControl": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": ["**/tools/**/*"],
      "linter": {
        "rules": {
          "style": {
            "noNonNullAssertion": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/docs/**/*",
        "!**/*.css",
        "!**/registry/**/*",
        "!**/public/**/*",
        "!**/node_modules",
        "!**/.cache",
        "!**/lib",
        "!**/dist",
        "!**/.eslintrc"
      ],
      "linter": {
        "rules": {
          "style": {
            "noNonNullAssertion": "off",
            "useImportType": "off"
          },
          "correctness": {
            "useExhaustiveDependencies": "warn",
            "noUnusedVariables": "error"
          },
          "a11y": {
            "useKeyWithClickEvents": "off"
          }
        }
      },
      "formatter": {
        "lineWidth": 100
      }
    }
  ]
}
