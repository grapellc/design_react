{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "preserveWatchOutput": true,
    "isolatedModules": false,
    "skipLibCheck": false
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"],
  "exclude": ["node_modules", "__testfixtures__"]
}
