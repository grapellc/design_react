{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "composite": true,
    "incremental": true,
    "rootDir": "src",
    "outDir": "lib",
    "emitDeclarationOnly": true,
    "declaration": true,
    "jsx": "preserve",
    "skipLibCheck": true
  },
  "include": ["src"]
}
